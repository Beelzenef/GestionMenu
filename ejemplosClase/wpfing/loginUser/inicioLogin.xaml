<Window x:Class="AppW_LoginUsuario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bienvenidx, user" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="0,0,0,76">
            <TextBlock Name="txtBl_Identificador" Text="- Identificacion de usuario -" FontSize="30" Margin="5"/>
            <TextBlock Name="txtBl_Usuario" Text="Usuario" FontSize="25" Margin="5"/>
            <TextBox Name="txtB_NombreUsuario" Text="Tu usuario" Foreground="Gray" FontSize="25" Margin="10" LostFocus="txtB_NombreUsuario_LostFocus" GotFocus="txtB_NombreUsuario_GotFocus"/>
            <TextBlock Name="txtBl_Clave" Text="Clave" FontSize="25" Margin="5"/>
            <PasswordBox Name="passB_ClaveUsuario" FontSize="25" Margin="10" GotFocus="passB_ClaveUsuario_GotFocus"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="101,251,95,0">
            <Button Name="btn_Aceptar" Content="Aceptar" Height="40" Width="100" FontSize="20" Margin="10" Click="btn_Aceptar_Click"/>
            <Button Name="btn_Reset" Content="Borrar contenido" Height="40" Width="180" FontSize="20" Margin="10" Click="btn_Reset_Click"/>
            <Label Name="lbl_Info" Foreground="Red" FontSize="10"/>
        </StackPanel>
    </Grid>
</Window>
