<Window x:Class="AppW_Labels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ejemplo con labels" Height="332.895" Width="525" ResizeMode="NoResize">
    <StackPanel>
        <Label Name="lbl_AIdeas" Target="{Binding ElementName=txtB_TusIdeas}" FontSize="25" Margin="5">
            <AccessText>
                _Ideitas
            </AccessText>
        </Label>
        <TextBox Name="txtB_TusIdeas" FontSize="20" Margin="5" Text="Escribe tus ideas..." Height="82"/>
        <Label Name="lbl_ANombre" Target="{Binding ElementName=txtB_Nombre}" FontSize="25" Margin="5">
            <AccessText>
                _Firma
            </AccessText>
        </Label>

        <TextBox Name="txtB_Nombre" FontSize="20" Margin="5" Text="¿Tu nombre?" Height="40"/>
    </StackPanel>
</Window>
