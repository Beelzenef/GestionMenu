<Window x:Class="CerrandoWin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Comando - Sincronizar textos" Height="160.526" Width="525" ResizeMode="NoResize">
    <StackPanel>
        <TextBox Name="txtB_Origen" Text="LOL" Margin="170, 10"/>
        <TextBox Name="tBl_Fuente" Margin="170, 10"
                   Text="{Binding ElementName=txtB_Origen, Path=Text, Mode=OneWay}"/>
    </StackPanel>
</Window>
