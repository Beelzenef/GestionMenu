<Window x:Class="AppW_OrdenandoSelectores.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista de juegos" Height="275" Width="525" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="Lista de juegos:" Margin="10" FontSize="20"/>
        <ListBox Name="lsB_ListaJuegos" Margin="5" FontSize="15">
            <ListBoxItem>Talessya</ListBoxItem>
            <ListBoxItem>Génesis</ListBoxItem>
            <ListBoxItem>Dresden Files</ListBoxItem>
            <ListBoxItem>El rastro de Cthulhu</ListBoxItem>
        </ListBox>
        <TextBlock Text="Ordenacion:" Margin="10" FontSize="20"/>
        <ComboBox Name="cmB_Ordenacion" Margin="5" FontSize="15" SelectionChanged="cmB_Ordenacion_SelectionChanged">
            <ComboBoxItem>Ascendente</ComboBoxItem>
            <ComboBoxItem>Descendente</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Window>
